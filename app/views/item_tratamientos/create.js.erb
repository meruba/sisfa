<%- if @item.errors.any? %>
  <%- @item.errors.full_messages.each do |msg|%>
    alertify.error("<%=j msg %>");
  <%- end %>
<%- else %>
  $('#<%=@item.tratamiento.id %>-ct').append("<%= j render('item_tratamientos/item', item: @item) %>");
  $('.form-item-tratamiento').trigger("reset");
  $('.add-tratamiento').hide();
  alertify.success("Tratamiento agregado");
<%- end %>
