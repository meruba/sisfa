                    </div>
                    <div class="col-xs-12 col-md-7">
                        <div class="row rating-desc">
                            <!-- Total Ventanilla-->
                            <div class="col-xs-3 col-md-4 text-right">
                                <span>Ventanilla</span>
                            </div>
                            <div class="col-xs-8 col-md-8">
                                <div class="progress progress-striped">
                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20"
                                        aria-valuemin="0" aria-valuemax="100" style="width: <%=@porcentaje_ventanilla%>%">
                                        $ <%=number_with_precision(@facturasventanilla.sum(:total), :precision => 2)%>
                                    </div>
                                </div>
                            </div>
                            <!-- Total hospitalizacion-->
                            <div class="col-xs-3 col-md-4 text-right">
                                <span>Hospitalizacion</span>
                            </div>
                            <div class="col-xs-8 col-md-8">
                                <div class="progress progress-striped">
                                    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="20"
                                        aria-valuemin="0" aria-valuemax="100" style="width: <%=@porcentaje_hospitalizacion%>%">
                                        $ <%=number_with_precision(@facturashospitalizacion.sum(:total), :precision => 2)%>
                                    </div>
                                </div>
                            </div>
                            <!-- Total Consulta Externa-->
                            <div class="col-xs-3 col-md-4 text-right">
                                <span>Consulta</span>
                            </div>
                            <div class="col-xs-8 col-md-8">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20"
                                        aria-valuemin="0" aria-valuemax="100" style="width:  <%=@porcentaje_consultaexterna%>%">
                                        $ <%=number_with_precision(@facturaconsultaexterna.sum(:total), :precision => 2)%>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <!-- numero total de facturas -->
                    <div class="progress progress-striped">
                      <div class="progress-bar progress-bar-success" style="width:  <%=@porcentaje_ventanilla%>%"><%=@porcentaje_ventanilla%>%
                      </div>
                      <div class="progress-bar progress-bar-warning" style="width:  <%=@porcentaje_hospitalizacion%>%"><%=@porcentaje_hospitalizacion%>%
                      </div>
                      <div class="progress-bar progress-bar-info" style="width:  <%=@porcentaje_consultaexterna%>%"><%=@porcentaje_consultaexterna%>%
                      </div>
                    </div>
