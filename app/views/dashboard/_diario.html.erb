    <div class="row">
        <div class="col-xs-12 col-md-7  estadisticas">
            <div class="welli well-sm">
                <div class="row">
                    <div class="col-xs-12 col-md-5 text-center">
                        <h3 class="rating-num">
                            $ <%=number_with_precision(@facturashoy.sum(:total), :precision => 2)%></h3>
                        <div class="rating">
                           <h5>TOTAL DE HOY</h5>
                        </div>
                        <div>
                            <h5 class="fecha_sin_hora"></h5>
                        </div>
