<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h4 class="modal-title" id="myModalLabel">VENTAS DE HOY</h4>
</div>
<div class="modal-body">
	<% if  @ventanilla_cantidad == 0%>
	<h3>No has facturado nada Aun!..</h3>
	<% else %>
	<div class="row">
		<div class="col-md-6 col-xs-12 text-center">
			<h6 class="text-muted">TOTAL VENTANILLA</h6>
			<div class="today-total">
				<div class = "hoy">
					<h1 class="total-num">$ <%= redondear(@ventanilla_total) %></h1>
				</div>
				<div class="numbers col-xs-12 text-center">
					<div class="col-md-4 col-xs-4">
						<span class="text-muted"><small>Sub 12</small></span>
						<strong><%= redondear(@ventanilla_subtotal12) %></strong> 
					</div>
					<div class="col-md-4 col-xs-4">
						<span class="text-muted"><small>Sub 0</small></span>
						<strong><%= redondear(@ventanilla_subtotal) %></strong>
					</div>
					<div class="col-md-4 col-xs-4">
						<span class="text-muted"><small>Iva</small></span>
						<strong><%= redondear(@ventanilla_iva) %></strong>
					</div>  
				</div>
			</div>
		</div>
		<div class="col-md-6 col-xs-12 text-muted">
			<h6 class="text-center">INFORMACION</h6>
			<blockquote>
				<h6><i class= "fa fa-file-o"></i> Facturas Emitidas: <%= @ventanilla_cantidad %></h6>
				<h6><i class= "fa fa-clock-o"></i> Primera Factura: <%= local_date(@primera_factura.created_at,"time")%></h6>
				<h6><i class= "fa fa-clock-o"></i> Ultima Factura: <%= local_date(@ultima_factura.created_at,"time")%></h6>
			</blockquote>
		</div>
	</div>
	<% end %>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	<%= link_to 'Imprimir', {:format => :pdf} , {:class => "btn btn-success", :target => "_blank"} %>
</div>
