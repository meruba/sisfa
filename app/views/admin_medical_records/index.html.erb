<div class="row title-green-head">
  <h2 class= "text-center">Administraci√≥n de registros medicos</h2>
</div>
<div class="row info-paciente">
  <legend>Hospitalizaciones</legend>
  <div class="row reporte-personal">
    <%= form_tag admin_medical_records_hospitalizaciones_path, :remote => true, method: :get do %>
    <div class="col-md-4">
      <%= label_tag :doctor, "Seleccione Doctor"%>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-user"></i>
        </div>
        <%= select_tag :doctor, options_for_select(@doctors.collect{ |u| [u.cliente.nombre, u.id] }), class: "form-control"%>
      </div>
    </div>
    <div class="col-md-2">
      <%= label_tag :fecha_inicial, "Fecha Inicial"%>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </div>
        <%= text_field_tag :fecha_inicial, params[:fecha_inicial], :class => "form-control datepicker", :required => true, :readonly => true %>
      </div>
    </div>
    <div class="col-md-2">
      <%= label_tag :fecha_final, "Fecha Final"%>
      <div class="input-group">
        <div class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </div>
        <%= text_field_tag :fecha_final, params[:fecha_final], :class => "form-control datepicker", :required => true, :readonly => true %>
      </div>
    </div>
    <div class="col-md-2">
      <br>
      <%= submit_tag "Buscar", :class => "btn btn-block btn-info", :remote => true%>
    </div>
    <% end %>
  </div>
  <div class="row info-paciente">
    <div class="resultado-busqueda-hospitalizaciones">
      <h5 class="text-center text-muted"><i class= "fa fa-search"></i> Los resultados se veran en esta seccion</h5>
    </div>
  </div>
