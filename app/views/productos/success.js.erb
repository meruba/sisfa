<%- if @producto.errors.any? %>
  $('#content_modal').html('<%= escape_javascript(render('productos_form')) %>');
  // agegar errores
<%- else %>
  $("#myModal").modal("hide");
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
  $(".table-responsive").html('<%= j render 'productos', productos: @productos %>');
  window.Helpers.init_datatables();
  window.Helpers.ButtonsHelper.init();
  alertify.success("Producto guardado");

  // agregar mensaje
<%- end %>