<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3 class="modal-title" id="myModalLabel">Nuevo Producto</h3>
</div>
<%= nested_form_for @producto, :remote => true do |f| %>
<div class="modal-body">
	<div class="field">
		<%= f.label :nombre %>
		<%= f.text_field :nombre %>
		<%= f.label :nombre_generico, "Nombre Genérico" %>
		<%= f.text_field :nombre_generico %>
		<%= f.label :codigo, "Código" %>
		<%= f.text_field :codigo %>
		<%= f.label :categoria %>
		<%= f.text_field :categoria%>
		<%= f.label :casa_comercial %>
		<%= f.text_field :casa_comercial%>
		<%= f.link_to_add "Compra", :ingreso_productos, :class => "nuevo_new"%>
		<%= f.fields_for :ingreso_productos, :wrap => false do |p| %>
			<%= f.label :cantidad %>
	    <%= p.text_field :cantidad %>
			<%= f.label :fecha_caducidad, "Fecha de Caducidad"%>
	    <%= p.text_field :fecha_caducidad, :class => "datepicker" %>
			<%= f.label :lote %>
	    <%= p.text_field :lote %>
			<%= f.label :precio_compra, "Precio de Compra"%>
	    <%= p.text_field :precio_compra %>
			<%= f.label :ganancia, "Ganancia %" %>
	    <%= p.number_field :ganancia, :step => "any" %>
	    <%= p.link_to_remove 'Compra', :class => "delete_destroy" %>
		<% end %>
	</div>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	<%= f.submit 'Guardar', class: "btn btn-primary"%>
</div>
<% end %>
