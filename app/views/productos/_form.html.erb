<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3 class="modal-title" id="myModalLabel">Nuevo Producto</h3>
</div>
<%= form_for(@producto, :remote => true) do |f| %>
<div class="modal-body">
	<div class="field">
		<%= f.label :nombre %>
		<%= f.text_field :nombre, required:true %>
		<%= f.label :nombre_generico, "Nombre Genérico" %>
		<%= f.text_field :nombre_generico, required:true %>
		<%= f.label :cantidad_disponible %>
		<%= f.number_field :cantidad_disponible, required:true %>
		<%= f.label :codigo, "Código" %>
		<%= f.text_field :codigo, required:true%>
		<%= f.label :Fecha_de_caducidad %>
		<%= f.text_field :fecha_de_caducidad, class: "form-control datepicker", required:true%>
		<%= f.label :categoria %>
		<%= f.text_field :categoria%>
		<%= f.label :precio_compra, "Precio de compra (sin IVA)"%>
		<%= f.number_field :precio_compra, required:true, min:0 %>
		<%= f.label :casa_comercial %>
		<%= f.text_field :casa_comercial%>
	</div>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	<%= f.submit 'Guardar', class: "btn btn-primary"%>
</div>
<% end %>
